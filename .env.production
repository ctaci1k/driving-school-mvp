# .env.production
# Application
NODE_ENV=production
PORT=3000

# Database
DB_PASSWORD=super_secure_password_here
DATABASE_URL=postgresql://postgres:super_secure_password_here@postgres:5432/driving_school

# Redis
REDIS_URL=redis://redis:6379

# NextAuth
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Przelewy24 (Production)
P24_MERCHANT_ID=your_production_merchant_id
P24_POS_ID=your_production_pos_id
P24_CRC=your_production_crc
P24_API_KEY=your_production_api_key
P24_SANDBOX=false

# Email
SMTP_HOST=smtp.mailgun.com
SMTP_PORT=587
SMTP_USER=postmaster@mg.yourdomain.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# File Storage (optional S3)
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=driving-school-uploads
S3_REGION=eu-central-1