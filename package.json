{
  "name": "driving-school-mvp",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "node prisma/seed/index.js"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    
    "// Database Scripts": "===================",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed/index.js",
    "db:seed:fresh": "node prisma/seed/index.js --fresh",
    "db:seed:minimal": "node prisma/seed/index.js --minimal",
    
    "// Reset & Migration": "===================",
    "db:reset": "prisma migrate reset --force --skip-seed && npm run db:seed",
    "db:reset:fresh": "rm -rf prisma/migrations && prisma migrate reset --force --skip-seed && prisma db push && npm run db:seed:fresh",
    "db:reset:windows": "scripts\\reset-database.bat",
    "db:reset:unix": "sh scripts/reset-database.sh",
    
    "// Quick Setup": "===================",
    "setup": "npm install && npm run db:reset:fresh",
    "setup:docker": "docker-compose up -d && sleep 10 && npm run db:reset:fresh",
    
    "// Development Helpers": "===================",
    "clean": "rm -rf .next node_modules package-lock.json && npm install",
    "clean:windows": "rmdir /s /q .next node_modules && del package-lock.json && npm install",
    "update:deps": "npm update && npm audit fix",
    
    "// Testing": "===================",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
