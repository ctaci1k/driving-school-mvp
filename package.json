 "scripts": {
    "// ========== DEVELOPMENT ==========": "",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    
    "// ========== DATABASE BASIC ==========": "",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    
    "// ========== DATABASE SEED (PHASE 2) ==========": "",
    "db:seed": "node prisma/seed/index.js",
    "db:seed:fresh": "node prisma/seed/index.js --fresh",
    "db:seed:minimal": "node prisma/seed/index.js --minimal",
    "db:seed:stats": "node prisma/seed/index.js --no-stats",
    
    "// ========== DATABASE RESET ==========": "",
    "db:reset": "prisma migrate reset --force",
    "db:reset:seed": "npm run db:reset && npm run db:seed",
    "db:reset:minimal": "npm run db:reset && npm run db:seed:minimal",
    
    "// ========== TESTING (PHASE 3) ==========": "",
    "test": "echo 'Tests will be added in Phase 3'",
    "test:unit": "echo 'Unit tests - Phase 3'",
    "test:e2e": "echo 'E2E tests - Phase 3'",
    
    "// ========== BUILD & DEPLOY ==========": "",
    "prebuild": "npm run db:generate",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && next build"
  },
